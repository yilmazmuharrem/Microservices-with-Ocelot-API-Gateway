{
  "Routes": [
    {
      "Key": "CompanyById",
      "UpstreamHttpMethod": [ "Get" ],
      "UpstreamPathTemplate": "/c/{id}",
      "DownstreamPathTemplate": "/api/Company/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "companyapi",
          "Port": 80
        }
      ]
    },
    {
      "Key": "SalesById",
      "UpstreamHttpMethod": [ "Get" ],
      "UpstreamPathTemplate": "/s/{id}",
      "DownstreamPathTemplate": "/api/Sales/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "salesapi",
          "Port": 80
        }
      ]
    },
    {
      "Key": "SalesByCompanyId",
      "UpstreamHttpMethod": [ "Get" ],
      "UpstreamPathTemplate": "/s/company/{id}",
      "DownstreamPathTemplate": "/api/Sales/company/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "salesapi",
          "Port": 80
        }
      ]
    }
  ],

  "Aggregates": [
    {
      "UpstreamPathTemplate": "/company-with-sales/{id}",
      "UpstreamHttpMethod": [ "Get" ],
      "Aggregator": "CompanySalesAggregator",
      "RouteKeys": [ "CompanyById", "SalesByCompanyId" ]
    }
  ],



  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:9002"
  }
}
